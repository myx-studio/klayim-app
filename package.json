{
  "name": "klayim",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "pnpm --filter web run dev",
    "dev:api": "pnpm --filter api run dev",
    "lint": "turbo lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo clean",
    "emulators": "firebase emulators:start --import=./.emulator-data --export-on-exit",
    "emulators:fresh": "firebase emulators:start",
    "emulators:export": "firebase emulators:export ./.emulator-data",
    "emulators:functions": "firebase emulators:start --only functions --import=./.emulator-data --export-on-exit",
    "dev:shared": "pnpm --filter @klayim/shared run build",
    "dev:all": "pnpm dev:shared && concurrently -n emu,api,web -c blue,yellow,green \"pnpm emulators\" \"pnpm dev:api\" \"pnpm dev:web\"",
    "deploy:api": "pnpm --filter api run build && firebase deploy --only functions",
    "deploy:web": "firebase apphosting:deploy --root apps/web"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "firebase-tools": "^13.29.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2"
  },
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "framer-motion": "^12.34.3"
  }
}
