{
  "functions": [
    {
      "source": "apps/api",
      "codebase": "api",
      "runtime": "nodejs20",
      "predeploy": ["pnpm --filter @klayim/shared build", "pnpm --filter api run build"]
    }
  ],
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8085
    },
    "database": {
      "port": 9000
    },
    "storage": {
      "port": 9199
    },
    "auth": {
      "port": 9099
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
